{
  "name": "vue-plugin-timer",
  "version": "0.3.2",
  "main": "dist/vue-plugin-timer.common.js",
  "browser": "dist/vue-plugin-timer.umd.js",
  "files": [
    "dist/*.{js,map}",
    "src/index.js"
  ],
  "keywords": [
    "timer",
    "setTimeout",
    "setInterval",
    "clear",
    "polling",
    "vue",
    "plugin"
  ],
  "scripts": {
    "prepack": "npm test && npm run build",
    "build": "vue-cli-service build --target lib --filename vue-plugin-timer --name vuePluginTimer src/index.js",
    "test": "vue-cli-service test:unit -r should -r should-sinon tests/**/*.spec.js",
    "lint": "vue-cli-service lint"
  },
  "peerDependencies": {
    "vue": "2.x"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.5",
    "@vue/cli-plugin-eslint": "^4.0.5",
    "@vue/cli-plugin-unit-mocha": "^4.0.5",
    "@vue/cli-service": "^4.0.5",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^5.2.3",
    "lint-staged": "^9.4.2",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^7.5.0",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
