{
  "name": "vue-plugin-timer",
  "version": "0.3.0",
  "main": "dist/vue-plugin-timer.common.js",
  "browser": "dist/vue-plugin-timer.umd.js",
  "files": [
    "dist/*.{js,map}",
    "src/index.js"
  ],
  "keywords": [
    "timer",
    "setTimeout",
    "setInterval",
    "clear",
    "polling",
    "vue",
    "plugin"
  ],
  "scripts": {
    "prepack": "npm test && npm run build",
    "build": "vue-cli-service build --target lib --filename vue-plugin-timer --name vuePluginTimer src/index.js",
    "test": "vue-cli-service test:unit -r should -r should-sinon tests/**/*.spec.js",
    "lint": "vue-cli-service lint"
  },
  "peerDependencies": {
    "vue": "2.x"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.7.0",
    "@vue/cli-plugin-eslint": "^3.7.0",
    "@vue/cli-plugin-unit-mocha": "^3.7.0",
    "@vue/cli-service": "^3.7.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "^1.0.0-beta.29",
    "eslint": "^5.16.0",
    "lint-staged": "^8.1.7",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^5.1.1",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
